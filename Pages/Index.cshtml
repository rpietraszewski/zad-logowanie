@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="p-3">
    <div class="w-25">

        <form method="post" class="index__form mb-2">

            <div class="form-group col-md-12 mb-2">
                <label asp-for="User2.Name"></label>
                <input asp-for="User2.Name" class="form-control" />
            </div>

            <div class="form-group col-md-12 mb-2">
                <label asp-for="User2.Surname"></label>
                <input asp-for="User2.Surname" class="form-control" />
            </div>

            <div class="form-group col-md-12 mb-4">
                <label asp-for="User2.Year"></label>
                <input asp-for="User2.Year" class="form-control" />
            </div>

            <button type="submit" class="btn btn-primary col-md-12 index__button">Zatwierdz</button>

        </form>
    </div>


    <div class="d-flex flex-column">
        <span asp-validation-for="User2.Name" class="text-danger"></span>
        <span asp-validation-for="User2.Surname" class="text-danger"></span>
        <span asp-validation-for="User2.Year" class="text-danger"></span>
    </div>

    @{
        if (Model.User2 != null)
        {
            <p>@Model.Result</p>
        }
    }

    <div>
        <p>Lista dzisiejszych użytkowników (@Model.Records.Count):</p>
        @foreach (var item in Model.Records.People) {
            <p>@item.Name @item.Surname @item.CreatedTime</p>
        }
</div>
</div>
